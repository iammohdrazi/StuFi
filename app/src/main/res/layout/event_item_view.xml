<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="13dp"
    app:cardElevation="21dp"
    android:layout_margin="11dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/mainveventdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11 Jan 2019"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:layout_marginStart="12dp"
            />

        <TextView
            android:id="@+id/mainveventname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catalystico 2K10"
            android:textSize="27sp"
            android:textColor="@color/darkorange"
            android:textStyle="bold"
            android:layout_below="@+id/mainveventdate"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-smallcaps"
            />

        <ImageView
            android:id="@+id/iconmainlocation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/mainveventname"
            android:src="@drawable/main_location"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/maineventvenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Stage, Near Library"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_below="@+id/mainveventname"
            android:layout_marginStart="32dp"
            />

        <ImageView
            android:id="@+id/iconmaintime"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_below="@+id/iconmainlocation"
            android:src="@drawable/main_timings"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/maintime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 : 30 AM"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_below="@+id/maineventvenue"
            android:layout_marginStart="32dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/iconmainrupee"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_below="@+id/iconmaintime"
            android:src="@drawable/ic_money"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/mainrupee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500 Rs per head /-"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_below="@+id/maintime"
            android:layout_marginStart="32dp"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/maineventimage"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/iconmainrupee"
            android:src="@drawable/image10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/maineventqrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maineventimage"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="-30dp"
            android:src="@drawable/ic_qr_code"
            app:borderWidth="0dp"
            app:rippleColor="@color/darkorange"
            app:backgroundTintMode="multiply"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/maineventedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maineventimage"
            android:layout_marginStart="96dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="-30dp"
            android:src="@drawable/ic_edit_main"
            app:borderWidth="0dp"
            app:rippleColor="@color/darkorange"
            app:backgroundTintMode="multiply"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/maineventparticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maineventedit"
            android:layout_marginTop="-14dp"
            android:text="Participants"
            android:textColor="@color/red"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_participants"
            android:padding="14dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>