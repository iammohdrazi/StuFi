<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/shimmerdate"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmername"
        android:layout_width="290dp"
        android:layout_height="27dp"
        android:layout_below="@id/shimmerdate"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmericon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/shimmername"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmervenue"
        android:layout_width="140dp"
        android:layout_height="17dp"
        android:layout_below="@id/shimmername"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmericon2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/shimmericon1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmertime"
        android:layout_width="140dp"
        android:layout_height="17dp"
        android:layout_below="@id/shimmervenue"
        android:layout_marginStart="40dp"
        android:layout_marginTop="13dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmericon3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/shimmericon2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmerfee"
        android:layout_width="140dp"
        android:layout_height="17dp"
        android:layout_below="@id/shimmertime"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmerimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/shimmericon3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black" />

    <View
        android:id="@+id/shimmerparticipate"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/shimmerimage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"
        android:layout_alignRight="@id/shimmerimage"
        />


</RelativeLayout>