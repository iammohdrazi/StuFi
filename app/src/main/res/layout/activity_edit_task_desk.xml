<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#131E69"
        android:layout_height="196dp"
        >
        <ImageView
            android:id="@+id/edit_note_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/titlepage"
            android:layout_marginTop="10dp"
            android:textSize="27sp"
            android:layout_marginBottom="28dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Edit Your Note"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#131E69"
            />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="-53dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        app:cardCornerRadius="10dp"
        android:orientation="vertical"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/addtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/titleDoes"
                android:inputType="text"
                android:hint=" What is your Title ?"
                android:background="@drawable/compileselected"
                android:textColorHint="#B5B5B5"
                android:textColor="#131E69"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            >

            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Description"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/etdesc"
                android:hint=" Fill Up Details here !"
                android:background="@drawable/compileselected"
                android:textColorHint="#B5B5B5"
                android:textColor="#131E69"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:maxLines="7"
                android:gravity="top|left"
                android:paddingStart="5dp"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            >

            <TextView
                android:id="@+id/tvtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="TimeLine"
                android:maxLength="30"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/ettime"
                android:inputType="text"
                android:hint="For e.g - 23 Jan or Tomorrow"
                android:background="@drawable/compileselected"
                android:textColorHint="#B5B5B5"
                android:textColor="#131E69"
                android:maxLength="9"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="19dp"
                android:paddingStart="5dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_delete_note"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#FF4130"
            android:text="Delete"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:layout_marginTop="75dp"
            />

        <Button
            android:id="@+id/editbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/password_reset"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Edit"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            />


    </LinearLayout>

</LinearLayout>

